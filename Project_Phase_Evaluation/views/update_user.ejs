<!--include heaad-->
<%-include('include/_header')%>

 <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i>All user</a>
                </div>
            </div>
            
            <div class="form-title text-center">
                <h2 class="text-dark">Update user</h2>
                <span class="text-light">Please make the neccessary update </span>
            </div>

            
            <!--form handling-->
 <form method="POST" id="update_user">
                <div class="new_user">
                    <div class="form-group">
                        <label for="ids" class="text-light">ID</label>
                        <input type="hidden" name="id" value="<%= user._id %>">
                        <input type="number" name="ids" value="<%= user.ids%>" placeholder="your id">
                        
                    </div>
                    <div class="form-group">
                        <label for="names" class="text-light">Name</label>
                        
                        <input type="text" name="names" value="<%= user.names%>" placeholder="your name">

                    </div>
                     <div class="form-group">
                        <label for="email" class="text-light">Email</label>
                        
                        <input type="email" name="email" value="<%= user.email%>" placeholder="your email">
                        
                    </div>
                    <div class="form-group">
                        <label for="dept" class="text-light">Department</label>
                       
                        <input type="text" name="dept" value="<%= user.dept%>" placeholder="your department">
                        
                    </div>
                    <div class="form-group">
                        <label for="grade" class="text-light">Grade</label>
                       
                        <input type="text" name="grade" value="<%= user.grade%>" placeholder="proffestional grade">
                        
                    </div>
                    <div class="form-group">
                        <label for="grpno" class="text-light">Group number</label>
                       
                        <input type="number" name="grpno" value="<%= user.grpno%>" placeholder="group number">
                        
                    </div>

                    <div class="form-group">
                        <label for="phase" class="text-light">Phase</label>
                       <div class="radio inline">
                            <input type="radio" id="phase-1" name="phase" value="Phase 1"<%= user.phase == 'Phase 1'?'checked': ''%>>
                            <label for="phase-1" class="radio-label">Phase 1</label>
                        </div>
                          <div class="radio inline">
                              <input type="radio" id="phase-2" name="phase" value="Phase 2"<%= user.phase == 'Phase 2'?'checked': ''%>>
                                <label for="phase-2" class="radio-label">Phase 2</label>
                          </div>
                          <div class="radio inline">
                                <input type="radio" id="phase-3" name="phase" value="Phase 3"<%= user.phase == 'Phase 3'?'checked': ''%>>
                                 <label for="phase-3" class="radio-label">Phase 3</label>
                           </div>
                    </div>
                    <div class="form-group">
                        <label for="time" class="text-light">TIME</label>
                       
                        <input type="time" name="time" value="<%= user.time%>" placeholder="group number">
                        
                    </div>
                    <div class="form-group">
                        <label for="date" class="text-light">Date</label>
                       
                        <input type="date" name="date" value="<%= user.date%>" placeholder="group number">
                        
                    </div>
                    <div class="form-group">
                        <label for="link" class="text-light">Link</label>
                       
                        <input type="link" name="link" value="<%= user.link%>" placeholder="Link">
                        
                    </div>
                     <div class="form-group">
                      <button type="submit" name="submit"class="btn text-dark update">Save</button>
                        
                    </div>
                     

                </div>
            
            </form>

         

        </div>
    </main>

       <%- include('include/_footer') %>